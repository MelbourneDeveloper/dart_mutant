{
  "name": "dart-mutant-website",
  "version": "1.0.0",
  "description": "Website for dart_mutant - mutation testing for Dart",
  "scripts": {
    "start": "eleventy --serve",
    "build": "eleventy",
    "clean": "rm -rf _site",
    "lint": "npm run lint:css && npm run lint:js && npm run lint:format",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint:js": "eslint 'src/**/*.js'",
    "lint:format": "prettier --check 'src/**/*.{njk,css,js,md}'",
    "format": "prettier --write 'src/**/*.{njk,css,js,md}'"
  },
  "keywords": ["dart", "mutation-testing", "eleventy"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "hyperlink": "^5.0.4"
  }
}
